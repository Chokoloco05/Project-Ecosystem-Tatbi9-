<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Tatbi9.Menu"
        Width="800" Height="600"
        Title="Menu" >
	<ScrollViewer>
		<StackPanel Spacing="20" VerticalAlignment="Center" HorizontalAlignment="Center">

			<!-- Titre principal -->
			<TextBlock Text="Écosystème REF : Tatbi9"
                       FontSize="54"
                       FontFamily="Arial"
                       Margin="0,-50,0,0"
                       HorizontalAlignment="Center" />

			<!-- Sous-titre -->
			<TextBlock Text="Directed By Omar Chokayri."
                       FontSize="16"
                       FontFamily="Arial"
                       Margin="0,40,0,0"
                       HorizontalAlignment="Center" />

			<!-- Bouton Start -->
			<Button Content="Start"
                    FontSize="28"
                    Foreground="Black"
                    BorderBrush="#262626"
                    BorderThickness="2"
                    Background="NavajoWhite"
                    Margin="0,20"
                    HorizontalAlignment="Center"
                    Click="OnStartClicked" />

			<!-- Bouton Quit -->
			<Button Content="Quit"
                    FontSize="28"
                    Foreground="Black"
                    BorderBrush="#262626"
                    BorderThickness="2"
                    Background="NavajoWhite"
                    Margin="0,20"
                    HorizontalAlignment="Center"
                    Click="OnQuitClicked" />
		</StackPanel>
	</ScrollViewer>
</UserControl>